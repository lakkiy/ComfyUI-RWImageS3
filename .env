# AWS credentials
AWS_ACCESS_KEY_ID=               # Your AWS access key ID
AWS_SECRET_ACCESS_KEY=           # Your AWS secret access key

# AWS region where your resources (e.g., S3 bucket) are located
AWS_REGION=                      # e.g., us-east-1

# S3 bucket configuration
S3_BUCKET_NAME=                  # Name of your S3 bucket

# Custom S3-compatible endpoint (optional, e.g., Cloudflare R2)
# ENDPOINT_URL=                  # e.g., https://your-account-id.r2.cloudflarestorage.com

# Fallback S3 configuration (optional)
# If image is not found in primary storage, will try fallback storage
FALLBACK_AWS_ACCESS_KEY_ID=      # Fallback AWS access key ID
FALLBACK_AWS_SECRET_ACCESS_KEY=  # Fallback AWS secret access key
FALLBACK_AWS_REGION=             # Fallback AWS region (e.g., us-east-1)
FALLBACK_S3_BUCKET_NAME=         # Fallback S3 bucket name
FALLBACK_ENDPOINT_URL=           # Fallback endpoint URL (optional)


############################################################
